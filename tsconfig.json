{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "public/App.tsx", "public/FahigkeitenPage.tsx", "public/Fragen.tsx", "public/IntroductionPage.tsx", "public/LeaderboardPage.tsx", "public/LevelSelectorPage.tsx", "public/Login.tsx", "public/main.tsx", "public/Risiko.tsx", "public/Risikobewertung.tsx", "public/Risikoidentifikation.tsx", "public/Signup.tsx", "public/test.tsx", "public/vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
